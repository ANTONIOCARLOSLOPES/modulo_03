<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count)%></h1>
 <Style>
    td{
      padding:14px 10px !important;
      border:solid 1px;
      } 
 </Style>

<table>
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('Links.show'), mining_type %></td>

        <td><%= link_to t('Links.edit'), edit_mining_type_path(mining_type), data: { confirm: 'Você está presta a realizar alteração, deseja continuar ?' } %></td>
        
        <td><%= link_to t('Links.delete'), mining_type, method: :delete, data: { confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
<details>
  <summary>Cique aqui para definição</summary>
  <p> O tipo de moeda pode variar, de acordo com seu cadastro</p>
</details

  </tbody>
</table>

<br>

<%= link_to t('new.mining_type'), new_mining_type_path, class:"btn bt-primary"%>
<%= link_to t('links.back'), welcome_index_path,class:"btn bt-primary" %>